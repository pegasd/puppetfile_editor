#!/usr/bin/env ruby

require 'puppetfile_editor'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: #{File.basename __FILE__} [command] [options]"

  opts.on('-v', '--[no-]verbose', 'Run verbosely') do |v|
    options[:verbose] = v
  end
end.parse!

p options
p ARGV
